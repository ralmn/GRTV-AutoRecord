{
	"manifest_version": 2,
	"name": "GamingRoomTV auto record",
	"version": "0.1.0.1",
	"description": "Auto record when you stream on GRTV",
	"options_page" : "options.html",
	"content_scripts": [ {
		"js": [ "grtv-record.js" ],
		"matches": [ "*://www.gamingroom.tv/*" ],
		"run_at": "document_end"

		} ],

		"background": { "scripts": ["background.js"] },
		"permissions": [
		"*://www.gamingroom.tv/*",
		"background",
		"notifications",
		"storage"
		],
		"web_accessible_resources": [
		"48.png"
		]

	}